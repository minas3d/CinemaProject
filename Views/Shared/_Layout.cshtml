<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cinema Project</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom Styles -->
    <style>
        body {
            background-color: #f8f9fa;
        }

        .navbar-brand {
            font-weight: bold;
            letter-spacing: 1px;
        }

        .movie-card img {
            height: 280px;
            object-fit: cover;
        }

        footer {
            background: #222;
            color: #bbb;
            padding: 20px 0;
            margin-top: 40px;
            text-align: center;
        }
    </style>
</head>

<body>

 <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">

        <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">Cinema</a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">

            <ul class="navbar-nav me-auto">

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Movies" asp-action="Index">Movies</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Actors" asp-action="Index">Actors</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Categories" asp-action="Index">Categories</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Cinemas" asp-action="Index">Cinemas</a>
                </li>

            </ul>

        </div>

    </div>
</nav>



    <!-- MAIN CONTENT -->
    <div class="container py-4">
        @RenderBody()
    </div>

    <!-- FOOTER -->
    <footer>
        <div class="container">
            <p>© @DateTime.Now.Year - Cinema Project | Developed by Kareem</p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
