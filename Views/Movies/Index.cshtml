@model IEnumerable<Cinema_project.Models.Movie>

@{
    ViewData["Title"] = "Movies";
}

<h1 class="mb-3">Movies</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New Movie</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Date</th>
            <th>Category</th>
            <th>Cinema</th>
            <th>Sub Image</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>@item.DateTime.ToShortDateString()</td>
            <td>@item.Category?.Name</td>
            <td>@item.Cinema?.Name</td>
            <td>
                @if (!string.IsNullOrEmpty(item.SubImg))
                {
                    <img src="@item.SubImg" width="70" />
                }
            </td>
            <td>
                <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Details</a>
                <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
