@model Cinema_project.Models.Movie

<h1>Movie Details</h1>

<div>
    <h3>@Model.Name</h3>

    <p><strong>Price:</strong> @Model.Price</p>
    <p><strong>Date:</strong> @Model.DateTime.ToShortDateString()</p>
    <p><strong>Category:</strong> @Model.Category?.Name</p>
    <p><strong>Cinema:</strong> @Model.Cinema?.Name</p>

    @if (!string.IsNullOrEmpty(Model.SubImg))
    {
        <img src="@Model.SubImg" width="200" />
    }
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back</a>
